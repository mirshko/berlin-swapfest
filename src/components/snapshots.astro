---
import { Image } from "astro:assets";
import cbase2 from "../assets/cbase-2.jpg";
import cbase from "../assets/cbase.jpg";
---

<Image
  src={cbase2}
  class="snapshot"
  alt="A group of people gathered around a table on c-base"
  loading="eager"
  priority
  draggable={false}
/>

<Image
  src={cbase}
  class="snapshot-2"
  alt="An image of the interior of c-base"
  loading="eager"
  priority
  draggable={false}
/>

<style>
  .snapshot {
    width: 60vw;
    height: auto;
    display: block;
    margin: 40px 0 0 0;
    transform: rotate(-4deg);
    border-radius: 8px;
  }

  .snapshot-2 {
    width: 60vw;
    height: auto;
    display: block;
    margin: -39vw 0 0 0;
    transform: rotate(2deg);
    border-radius: 8px;
  }

  .snapshot:hover {
    z-index: 1;
  }

  img {
    user-select: none;
  }
</style>
